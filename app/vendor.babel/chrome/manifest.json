{
  "name": "Nuxeo Dev Tools",
  "version": "3.1.0",
  "manifest_version": 3,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "A handy collection of shortcuts and tools for the Nuxeo developer",
  "icons": {
    "16": "images/nuxeo-16.png",
    "128": "images/nuxeo-128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "../../../app/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab",
    "notifications",
    "background",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://ajax.googleapis.com/",
    "https://app.prodpad.com/"
  ],
  "optional_host_permissions": [
    "*://*/*",
  ],
  "omnibox": {
    "keyword": "nx"
  },
  "action": {
    "default_icon": {
      "19": "images/nuxeo-19.png",
      "38": "images/nuxeo-38.png"
    },
    "default_title": "Nuxeo Dev Tools",
    "default_popup": "popup.html"
  }
}
