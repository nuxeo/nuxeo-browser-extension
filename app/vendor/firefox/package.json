{

  "manifest_version": 2,
  "name": "nuxeoffdevtools",
  "version": "0.0.1",

  "description": "",

  "icons": {
    "48": "images/nuxeo-48.png",
    "96": "images/nuxeo-96.png"
  },
  "applications": {
    "gecko": {
      "id": "nuxeoffdevtools",
      "strict_min_version": "45.0",
      "strict_max_version": "50.*"
    }
  },
  "background": {
    "scripts": [
			"scripts/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "images/nuxeo-32.png",
    "default_title": "Nuxeo FF Dev Tools",
    "default_popup": "popup.html"
  },
  "permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"activeTab",
		"https://ajax.googleapis.com/",
		"notifications",
		"declarativeContent"
  ]

}
