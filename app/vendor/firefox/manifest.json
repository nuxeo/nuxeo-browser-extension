{

  "manifest_version": 2,
  "name": "Nuxeo FF Dev Tools",
  "version": "1.0",

  "description": "",

  "icons": {
    "48": "images/nuxeo-48.png",
    "96": "images/nuxeo-96.png"
  },

  "content_scripts": [
    {
      "matches": [
				"http://*/*",
				"https://*/*",
				"<all_urls>"
			],
      "js":  [
				"scripts/contentscript.js"
			]
    }
  ],
  "applications": {
    "gecko": {
      "id": "nuxeoffdevtools",
      "strict_min_version": "45.0",
      "strict_max_version": "50.*"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "images/nuxeo-32.png",
    "default_title": "Nuxeo FF Dev Tools",
    "default_popup": "scripts/popup.html"
  },
  "permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"activeTab",
		"https://ajax.googleapis.com/",
		"notifications",
		"declarativeContent"
  ]

}
