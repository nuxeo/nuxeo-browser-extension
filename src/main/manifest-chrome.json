{
  "name": "Nuxeo Dev Tools",
  "version": "0.0.0",
  "version_name": "0.0.0-dev",
  "manifest_version": 3,
  "description": "A handy collection of shortcuts and tools for the Nuxeo developer",
  "icons": {
    "16": "images/nuxeo-16.png",
    "128": "images/nuxeo-128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "main.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*", "https://nos-preprod-connect.nuxeocloud.com/*", "https://connect.nuxeo.com/*"],
      "js": ["content/main/index.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "cookies",
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "notifications",
    "background",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://nos-preprod-connect.nuxeocloud.com/*",
    "https://connect.nuxeo.com/*"
  ],
  "omnibox": {
    "keyword": "nx"
  },
  "action": {
    "default_icon": {
      "19": "images/nuxeo-19.png",
      "38": "images/nuxeo-38.png"
    },
    "default_title": "Nuxeo Dev Tools",
    "default_popup": "popup/index.html"
  }
}
